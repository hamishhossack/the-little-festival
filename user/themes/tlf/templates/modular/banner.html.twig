<section id="banner">
    <div class="inner">
        <header>
            <img src="@theme://{{ page.header.image }}" alt="{{ page.title }}">
            <h2>{{ page.header.title }}</h2>
        </header>
        {{ content }}
        <footer>
            <ul class="buttons vertical">
                {% for button in page.header.buttons %}
                    <li><a href="{{ button.url }}" class="button fit scrolly">{{ button.text }}</a></li>
                {% endfor %}
            </ul>
        </footer>
    </div>
</section>
