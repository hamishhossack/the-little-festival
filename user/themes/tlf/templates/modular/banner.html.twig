<section id="banner">
    <div class="inner">
        <header>
            <img src="/user/themes/tlf/{{ page.header.image }}" alt="{{ page.title }}">
            <h2>{{ page.header.title }}</h2>
        </header>
        {{ content }}
        <footer>
            <ul class="buttons vertical">
                {% for post in page.find('/events').children.order('date', 'desc').slice(0, 5) %}
                    <li class="recent-posts">
                        <strong><a href="{{ post.url }}" class="button fit">{{ post.title }}</a></strong>
                    </li>
                {% endfor %}
            </ul>
        </footer>
    </div>
</section>
