<section id="banner">
    <div class="inner 5u">
        <header>
            <img src="/user/themes/tlf/{{ page.header.image }}" alt="{{ page.title }}">
            <h2>{{ page.header.title }}</h2>
        </header>
        {{ content }}
        <footer>
            <ul class="buttons vertical">
                {% for button in page.header.buttons %}
                    <li class="recent-posts">
                        <strong><a href="{{ button.url }}" class="button fit">{{ button.text }}</a></strong>
                    </li>
                {% endfor %}
            </ul>
        </footer>
    </div>
</section>
